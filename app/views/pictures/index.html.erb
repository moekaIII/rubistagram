<%= @pictures.each do |picture| %>
  <ul>
    <li><strong><%= picture.user.name %></strong></li>
    <li><%= picture.title %></li>
    <li><%= image_tag(picture.image.url) %></li>
    <li><%= picture.content %></li>
  </ul>

  <%= link_to 'Detail', picture_path(picture.id) %>
  <% if picture.user_id == current_user.id %>
    <%= link_to 'Edit', edit_picture_path(picture.id), data: {confirm: 'Are you sureï¼Ÿ'} %>
    <%= link_to 'Dlete', picture_path(picture.id), method: :delete %>
  <% end %>

