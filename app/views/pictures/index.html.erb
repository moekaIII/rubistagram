<h1>Time Line</h1>

<p>
<% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: "#{key}") %>
<% end %>
</p>
<% @pictures.each do |picture| %>
<div class="box">
  <ul class="list">
    <li class="user"><div id="user-img"><%= image_tag(picture.user.image.url) %></div><%= picture.user.name %></li>
    <li><h3><%= picture.title %></h3></li>
    <li class="image"><%= image_tag(picture.image.url) %></li>
    <li><%= picture.content %></li>
  </ul>
  <button type="button" class="btn btn-outline-info"><%= link_to 'Detail', picture_path(picture.id) %></button>
  <% if picture.user_id == current_user.id %>
    <button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_picture_path(picture.id), data: {confirm: 'Are you sureï¼Ÿ'} %></button>
    <button type="button" class="btn btn-outline-warning"><%= link_to 'Dlete', picture_path(picture.id), method: :delete %></button>
  <% end %>
  <br>
</div>
<% end %>
