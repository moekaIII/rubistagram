
<h3><%= @picture.title %></h3>
<p><%= image_tag @picture.image.url if @picture.image.present? %></p>
<p><%= @picture.content %></p>


<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to '❤️', favorite_path(id: @favorite.id), method: :delete %>
  <% else %>
    <%= link_to '💛', favorites_path(picture_id: @picture.id), method: :post %>
  <% end %>
<% end %>
<%= link_to 'Back', pictures_path %>
